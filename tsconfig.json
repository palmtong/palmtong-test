{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "lib": ["ES2022"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node", "@playwright/test"],
    "outDir": "./dist",
    "rootDir": "./"
  },
  "include": ["tests/**/*.ts", "helpers/**/*.ts", "*.ts"],
  "exclude": ["node_modules", "dist", "test-results", "playwright-report"]
}
