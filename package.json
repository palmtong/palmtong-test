{
  "name": "palmtong-test",
  "version": "1.0.0",
  "description": "E2E tests for Palmtong system (Cloudflare Workers + Pages)",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "playwright test",
    "test:backend": "playwright test tests/api --project=chromium",
    "test:frontend": "playwright test tests/e2e --project=chromium",
    "test:e2e": "playwright test tests/e2e --project=chromium",
    "test:pdf": "playwright test tests/pdf-generation.spec.ts --project=chromium",
    "test:pdf:production": "playwright test tests/production/pdf-generation-production.spec.ts --project=chromium",
    "test:all": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:json": "cat test-results/results.json | jq '{expected: .stats.expected, unexpected: .stats.unexpected, skipped: .stats.skipped}'",
    "test:failures": "cat test-results/results.json | jq '.suites[].suites[].specs[] | select(.ok == false) | {title: .title, file: .file}' | head -20",
    "MANUAL:test:debug": "playwright test --debug",
    "MANUAL:test:ui": "playwright test --ui",
    "MANUAL:test:report": "playwright show-report",
    "MANUAL:test:headed": "playwright test --headed"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "cloudflare"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^24.10.0",
    "dotenv": "^17.2.3",
    "typescript": "^5.9.3"
  }
}
